{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "clean": {
      "cache": false
    },
    "build": {
      "inputs": [
        "contented.config.mjs",
        "frontmatter/**",
        "tsconfig.json",
        "package.json",
        "tsconfig.build.json",
        "./**/*.ts"
      ],
      "outputs": ["_*/*", "index.js", "index.d.ts", "index.json", "./**/*.js", "./**/*.d.ts", "./**/*.d.ts.map"],
      "dependsOn": ["^build"]
    },
    "test": {
      "inputs": ["tsconfig.json", "./**/*.ts", "./**/*.unit.ts", "./tests-i9n/**", "./tests-e2e/**"],
      "dependsOn": ["^build"]
    },
    "lint": {
      "outputs": []
    }
  }
}
