{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "clean": {
      "cache": false
    },
    "build": {
      "inputs": ["tsconfig.json", "contented.config.mjs", "src/**", "frontmatter/**"],
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },
    "test": {
      "inputs": ["src/**", "**/*.unit.ts", "tests-i9n/**", "tests-e2e/**"],
      "dependsOn": ["^build"]
    },
    "lint": {
      "outputs": []
    }
  }
}
