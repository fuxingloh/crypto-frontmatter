{
  "$schema": "https://turborepo.org/schema.json",
  "extends": ["//"],
  "pipeline": {
    "mirror": {
      "outputs": ["public/_crypto-frontmatter"],
      "dependsOn": ["^build"]
    },
    "build": {
      "cache": false,
      "dependsOn": ["^build", "mirror"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build", "mirror"]
    }
  }
}
